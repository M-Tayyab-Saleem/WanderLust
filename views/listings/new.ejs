<% layout ("/layouts/boilerplate.ejs")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>Create New Listing</h1>
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Enter Title</label>
                    <input type="text" name="listings[title]" placeholder="Add cachy title" class="form-control" required>
                    <div class="invalid-feedback">Title required</div>
                </div >
                <div>
                    <label for="description" class="form-label">Enter Description</label>
                    <textarea type="text" name="listings[description]" placeholder="Description"
                        class="form-control" required></textarea>
                    <div class="invalid-feedback">Description required</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listings[image]" class="form-control" required>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Enter Price</label>
                        <input name="listings[price]" placeholder="1200" class="form-control" required>
                        <div class="invalid-feedback">Price required</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Enter Country</label>
                        <input type="text" name="listings[country]" placeholder="Pakistan" class="form-control"
                        required>
                        <div class="invalid-feedback">Country required</div>
                    </div>
                </div>
                <div>
                    <label for="location" class="form-label">Enter Location</label>
                        <input type="location" name="listings[location]" placeholder="8/B Block Shahr e Faisal KHI" class="form-control" required>
                        <div class="invalid-feedback">Location required</div>
                </div>
                <br>
                <button class="btn btn-my mt-3">Add</button>
                <br><br>
            </form>
        </div>
    </div>